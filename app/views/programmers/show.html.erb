<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, root_path %>

<h3>
  <%= @programmer.name %> | <%= formatted_date(@programmer.birth_date) %> - <%= formatted_date(@programmer.death_date) %>
</h3>

<div class="row jumbotron">

  <div class="col-md-3">
    <%= image_tag @programmer.image, height: '250px', class:"profile-image" %>
  </div>

  <div class="col-md-9 programmer-info">

    <!-- <%= render partial:'attribute', locals: {attribute: @programmer.send('home_country'), attr_name: 'Home Country'} %>
    <%= render partial:'attribute', locals: {attribute: @programmer.send('quote'), attr_name: 'Quote'} %>
    <%= render partial:'attribute', locals: {attribute: @programmer.send('claim_to_fame'), attr_name: 'Claim To Fame'} %> -->

    <% @programmer.attributes.each do |attribute| %>
      <%= render partial:'attribute',
        locals: {
          attribute: @programmer.send(attribute.first),
          attr_name: attribute.first.gsub("-", " ").capitalize
        }
      %>
    <% end %>

    <p>
    <%= link_to "Learn more about #{@programmer.name}", @programmer.wikipedia_page, target: '_blank' %>
    </p>

  </div>
</div>
